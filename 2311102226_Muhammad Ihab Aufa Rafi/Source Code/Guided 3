package main

import (
	"fmt"
	"math"
)

func main() {
	var jejariBola float64
	fmt.Print("Jari-Jari Bola: ")
	fmt.Scanln(&jejariBola)

	volumeBola := (4.0/3.0) * math.Pi * math.Pow(jejariBola, 3)
	luasBola := 4 * math.Pi * math.Pow(jejariBola, 2)

	fmt.Printf("Bola dengan jejari %.0f memiliki volume %.4f dan luas kulit %.4f\n", jejariBola, volumeBola, luasBola)
}
